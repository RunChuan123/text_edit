    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run editor (cppdbg, external terminal)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "cwd": "${fileDirname}",
            "MIMode": "lldb",
            "externalConsole": true   // ⬅️ 在 cppdbg 里是这个字段，不是 console
        }
    ]
}
